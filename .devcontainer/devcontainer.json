{
  "name": "Flair Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",

  "privileged": true,

  // port for the XPRA web client
  "forwardPorts": [10000],

  "portsAttributes": {
    "10000": {
      "label": "Flair GUI (XPRA)",
      "onAutoForward": "openBrowser"
    }
  },

  "postStartCommand": "xpra start :100 --bind-ws=0.0.0.0:10000 --html=on --start=gnome-terminal"
}