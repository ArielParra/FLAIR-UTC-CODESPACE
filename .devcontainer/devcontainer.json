{
  "name": "Flair Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "privileged": true,

  // port for the XPRA web client
  "forwardPorts": [10000],

  "portsAttributes": {
    "10000": {
      "label": "Gnome Terminal (XPRA)",
      "onAutoForward": "openBrowser"
    }
  },

  "postStartCommand": "xpra start --bind-tcp=0.0.0.0:10000 --html=on --start=gnome-terminal",

  // VS Code extensions 
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  }
}